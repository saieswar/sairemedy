<div class="row">
  <div class="col-sm-6">
    <%= form_for(@dashboard_image) do |f| %>
      <div class="form-group">
        <%= f.label :image, "Photo" %>
        <%= f.file_field :image, class: 'form-control'  %>
        <p class="help-block">Upload pic of Product.</p>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    <div class="actions">
      <%= f.submit class: "btn btn-success" %>
    </div>
    <% end %>

  </div>
</div>