<p id="notice"><%= notice %></p>
<%= link_to new_nakshatra_path, class: "btn btn-circle btn-success btn-lg pull-right" do %>
  <i class="fa fa-plus"></i>
<%end%>

<h1 class="page-header">Listing Nakshatras</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @nakshatras.each do |nakshatra| %>
      <tr>
        <td><%= nakshatra.name %></td>
        <td><%= link_to 'Show', nakshatra %></td>
        <td>
          <%= link_to edit_nakshatra_path(nakshatra) do %>
            <i class="fa fa-pencil-square-o"></i>
          <%end%>
        </td>
        <td>
          <%= link_to nakshatra, method: :delete, data: { confirm: 'Are you sure?' } do%>
            <i class="fa fa-trash-o"></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

