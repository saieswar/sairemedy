<h1 class="page-header ">Matrimony</h1>

<div class="well well-xs bg-red filter">    
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
    <%= form_tag matrimony_index_path ,class: "form-inline", remote: true, method: :get do %>
      <div class="form-group form-group-sm">
        <%= label_tag :Female, "Female"%>
        <%= select_tag "f_nakshatra", options_for_select(@keys), class: "form-control" %>
      </div>
      <div class="form-group form-group-sm">
        <%= label_tag :Male, "Male"%>
        <%= select_tag "m_nakshatra", options_for_select(@keys), class: "form-control" %>
      </div>

      <!-- <button type="submit" class="btn btn-primary"> <i class="fa fa-search"></i> </button> -->
      <%= submit_tag "Sumbit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
